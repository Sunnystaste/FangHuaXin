<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise_tx"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/toolbar_bg">


        <TextView
            android:textColor="@color/white"
            android:id="@+id/mid_txv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/feedback"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/back_feedback"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/umeng_socialize_back_icon" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="@color/baise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:id="@+id/edit_text"
            android:windowSoftInputMode="adjustResize"
            android:background="@color/baise"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:hint="你的意见对我们很重要(摇一摇即可反馈意见)"
            android:layout_width="match_parent"
            android:layout_height="200dp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@color/baise"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="联系方式" />
        <TextView
            android:textColor="#ff0000"
            android:text="*(必填)"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/ed_tel"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tijiao_feedback"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_confirm_selector"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/baise" />

</LinearLayout>