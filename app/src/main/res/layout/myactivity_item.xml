<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_margin="20dp"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXxxxxxxxxxxxxxxxxxxxxxxx"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/myactivity_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/myactivity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/myactivity_content"
        android:layout_alignTop="@+id/myactivity_content"
        android:layout_marginTop="30dp"
        android:text="XXXXXXXXXXXXXXX" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/myactivity_time"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_label"
        android:id="@+id/imageView7" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/myactivity_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:text="XXX" />


</RelativeLayout>