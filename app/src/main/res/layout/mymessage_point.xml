<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/toolbar_bg">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/mid_txv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/My_Point"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/back_point"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/umeng_socialize_back_icon" />

        <ImageView
            android:id="@+id/mypoint_zhuyi"
            android:layout_marginRight="15dp"
            android:src="@drawable/score_attentions"
            android:layout_gravity="right"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/MyPoint"
                android:background="@drawable/toolbar_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="60dp"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="150dp" />



            <TextView
                android:background="@color/huise"
                android:textColor="@color/heise"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的学分"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@drawable/baifen_gray"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="25dp"
                    android:layout_height="150dp" />

                <ImageView
                    android:layout_margin="25dp"
                    android:src="@drawable/lianji_gray"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="150dp" />


            </LinearLayout>

            <TextView
                android:background="@color/huise"
                android:textColor="@color/heise"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="积分详情"/>


            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/heise"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="名称"/>


                <TextView
                    android:textColor="@color/heise"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="类别"/>

                <TextView
                    android:textColor="@color/heise"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="日期"/>

                <TextView
                    android:textColor="@color/heise"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="积分"/>
            </LinearLayout>


            <com.example.youyou.myheart.Paint.NoScrollListview
                android:id="@+id/listview_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.example.youyou.myheart.Paint.NoScrollListview>

        <LinearLayout
            android:orientation="vertical"
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginTop="20dp"
                android:src="@drawable/emptyview"
                android:layout_width="match_parent"
                android:layout_height="200dp" />


            <TextView
                android:layout_marginTop="20dp"
                android:text="@string/empty"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>